#!/bin/bash -e
# Simple script that creates a Makefile for all c files that contain a main function
CC="gcc"
INCS="-I../include"
LIBPATH=../lib/libxtcommon.a
cat <<END >.gitignore
# Created by build script. Modifications are lost when rerun.
.gitignore
Makefile
*.tmp
# VIM
*.swp
*.vim
# CC
*.o
tests.log
vtests.log
END
SYSTEM=`uname -s 2>/dev/null`

WINARCH=w64-mingw32
win=no

while true; do
	if [ -z "$1" ]; then
		break
	fi
	case "$1" in
	windows*)
		case "$1" in
		windows-x86)
			WIN=i686-$WINARCH
			;;
		windows-x64)
			WIN=x86_64-$WINARCH
			;;
		*)
			echo Invalid target: $1 1>&2
			exit 1;;
		esac
		CC="$WIN"-gcc
		if ! hash "$CC" 2>/dev/null; then
			echo Missing windows toolchain 1>&2
			exit 1
		fi
		win=yes
		LDLIBS=" -lntdll -lpsapi -lws2_32"
		shift 1
		continue;;
	--)
		shift 1
		break;;
	esac
	shift 1
done

if [ "$win" == no ]; then
	case "$SYSTEM" in
		Linux*)
			LDLIBS=" -lpthread"
			MACHINE_ARCH=`uname -m`
			if [ "$MACHINE_ARCH" != "x86_64" ]; then
				# Enable large file support if we're not on 64 bit
				CFLAGS="$CFLAGS -D_FILE_OFFSET_BITS=64"
			fi
			;;
		CYGWIN*)
			LDLIBS=" -lntdll -lws2_32"
			;;
		*)
			echo 'Unsupported system' 1>&2
			exit 1
			;;
	esac
fi
CFLAGS="-Wall -Wextra -pedantic -std=c99 $*"
CFLAGS="$CFLAGS $INCS"
# Write phony target and overwrite some builtin variables
cat <<END >Makefile
.PHONY: default clean tests vtests

CC=$CC
CFLAGS=$CFLAGS
LDLIBS=$LDLIBS

END

printf "MAIN=" >>Makefile
# Filter Binary.* and strip extensions
MAIN=$(grep -r 'int main' | sed -e '/Binary.*/d' -e 's/:.*//g')
# Write elf executables
for i in $MAIN; do
	bin="${i/%.c/}"
	echo "$bin" >>.gitignore
	printf ' \\\n\t%s' "$bin" >>Makefile
done
# Write object files
printf '\nOBJECTS=' >>Makefile
FILES=$(find . -name '*.c')
FILES="${FILES//.\//}"
for i in $FILES; do
	printf ' \\\n\t%s' "${i/%.c/.o}" >>Makefile
done
for i in $MAIN; do
	FILES="${FILES/$i/}"
done
printf '\nLIST=' >>Makefile
for i in $FILES; do
	printf ' \\\n\t%s' "${i/%.c/.o}" >>Makefile
done
cat <<'EOF' >>Makefile

default: $(OBJECTS) $(MAIN)
EOF
for i in $MAIN; do
	printf '%s: %s $(LIST) %s\n' "${i/%.c/}" "${i/%.c/.o}" "$LIBPATH" >>Makefile
done

# Create tests
cat <<'EOF' >>Makefile
tests: $(MAIN)
	>tests.log
	@echo "RUNNING general"
	@./general
	@echo "RUNNING string"
	@./string
EOF
MAIN="${MAIN/general/}"
MAIN="${MAIN/string/}"
for i in $MAIN; do
	if [ -f $i ]; then
		printf '\t@echo "RUNNING %s"\n\t@./%s >>tests.log 2>&1\n' "${i/%.c/}" "${i/%.c/}" >>Makefile
	fi
done

# Create valgrind tests
cat <<'EOF' >>Makefile
vtests: $(MAIN)
	>vtests.log
	@echo "RUNNING general"
	@valgrind ./general
	@echo "RUNNING string"
	@valgrind ./string
EOF
for i in $MAIN; do
	if [ -f $i ]; then
		printf '\t@echo "RUNNING %s"\n\t@valgrind ./%s >>vtests.log 2>&1\n' "${i/%.c/}" "${i/%.c/}" >>Makefile
	fi
done

cat <<'EOF' >>Makefile
%.o: %.c
	$(CC) -c $< -o $@ $(CFLAGS)
clean:
	rm -f $(MAIN) $(OBJECTS)
EOF
